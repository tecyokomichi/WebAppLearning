<p id="notice"><%= notice %></p>

<h1>作者</h1>

<div>
  <%= form_tag(authors_path, method: "get") do %>
    <%= text_field_tag :name, params[:name] %>
    <%= submit_tag "検索" %>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>年齢</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.id %></td>
        <td><%= author.name %></td>
        <td><%= author.age %></td>
        <td><%= link_to '詳細', author %></td>
        <td><%= link_to '編集', edit_author_path(author) %></td>
        <td><%= link_to '削除', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <!-- <% author.books.each do |book| %>
         <tr>
           <td><%= book.title %></td>
           <td><%= book.author_id %></td>
           <td><%= link_to '詳細', book %></td>
           <td><%= link_to '編集', edit_book_path(book) %></td>
           <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %> -->
    <% end %>
  </tbody>
</table>

